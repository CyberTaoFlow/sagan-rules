alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[NXLOG] Unable to read eventlog"; content: "EvtNext failed with error 15007|3a| ";  xbits: isnotset,nxlog_problem,track ip_src; after: track by_src, count 5, seconds 300; threshold: type limit, track by_src, count 1, seconds 86400; xbits: set,nxlog_problem,track ip_src, expire 86400; classtype: program-error; program: nxlog; reference: url,wiki.quadrantsec.com/bin/view/Main/5003108; sid:5003108; rev:7;)


alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[NXLOG] Service stopping"; content: "stopping nxlog service"; xbits: isnotset,windows.reboot,track ip_src; xbits: isnotset,nxlog_problem,track ip_src; classtype: program-error; program: nxlog; reference: url,wiki.quadrantsec.com/bin/view/Main/5003109; sid:5003109; rev:5;)

#alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[NXLOG] Termination Request"; content: "nxlog received a termination request signal"; xbits: isnotset,by_src,reboot.windows|nxlog_problem; classtype: program-error; program: nxlog; reference: url,wiki.quadrantsec.com/bin/view/Main/5003110; sid:5003110; rev:3;)

alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[NXLOG] Missing Windows Log Message"; pcre: "/ [0-9][0-9][0-9][0-9]?: $/"; program: *Security*|AppLocker|Application|Backup|Bonjour|CPQCISSE|Citrix|DAC|DHCP-Server|EMET|Eventlog|MSSQL*|MsiInstaller|NtFrs|Ntfs|RemoteAccess|Service|Service_Control_Manager|Symantec|Sysmon|System|USER32|Tenable|TermService|The|WinVNC4|crypt32; after: track by_src, count 25, seconds 300; threshold: type limit, track by_src, count 1, seconds 86400; xbits: set,nxlog_problem,track ip_src, expire 86400; classtype: program-error; reference: url,wiki.quadrantsec.com/bin/view/Main/5003111; sid:5003111; rev:8;)

alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[NXLOG] Service restart to correct problem [CLEAR XBIT]"; content: "stopping nxlog service"; xbits: isnotset,reboot.windows,track ip_src; xbits: isset,nxlog_problem,track ip_src; xbits: unset,nxlog_problem,track ip_src; xbits:nounified2; xbits:noeve; classtype: system-event; program: nxlog; reference: url,wiki.quadrantsec.com/bin/view/Main/5003125; sid:5003125; rev:3;)

