alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[O365] Impossible ravel activity"; content: "ALERT_ANUBIS_DETECTION_VELOCITY"; parse_src_ip: 1;classtype:successful-user; reference: url,wiki.quadrantsec.com/bin/view/Main/5003802; sid:5003802; rev:1;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[O365] Multiple failed user log on attempts"; content: "ALERT_CABINET_EVENT_MATCH_AUDIT"; classtype:unsuccessful-user; reference: url,wiki.quadrantsec.com/bin/view/Main/5003803; sid:5003803; rev:1;)

